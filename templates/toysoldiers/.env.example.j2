# Environment configuration for {{ project_name }}
# Copy this to .env and update with your actual values

# Project Configuration
PROJECT_NAME="{{ project_name }}"
ENVIRONMENT=development
DEBUG=true

# Database Configuration
DATABASE_URL=postgresql://localhost:5432/{{ project_name | lower | replace(" ", "_") }}

# API Configuration
API_BASE_URL={{ api_base_url | default("http://localhost:8000") }}
API_VERSION=v1

# Authentication (update with your actual keys)
JWT_SECRET_KEY=your-jwt-secret-key-here
AUTH_TOKEN_EXPIRE_HOURS=24

# External Services (update with your actual keys)
STRIPE_SECRET_KEY=your-stripe-secret-key
SUPABASE_URL=your-supabase-url
SUPABASE_ANON_KEY=your-supabase-anon-key

# Development Settings
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000,http://localhost:19000