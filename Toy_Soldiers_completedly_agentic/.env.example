# Database URL
DATABASE_URL=postgresql://user:password@localhost:5432/toysoldiers
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anonymous-key
SUPABASE_SERVICE_KEY=your-supabase-service-role-key

# Payments (Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# AWS/S3 for content storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET=toysoldiers-content

# Cloudflare
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ZONE_ID=your-zone-id

# Twilio for SMS/messaging
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Email (SendGrid)
SENDGRID_API_KEY=SG.your-sendgrid-api-key

# Analytics
MIXPANEL_TOKEN=your-mixpanel-token
GOOGLE_ANALYTICS_ID=GA-your-analytics-id

# Environment
NODE_ENV=development
DEBUG=true
PORT=3000

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:19006
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Video processing
FFMPEG_PATH=/usr/bin/ffmpeg
MAX_VIDEO_SIZE=500000000
ALLOWED_VIDEO_TYPES=mp4,mov,avi,mkv

# Push notifications
FCM_SERVER_KEY=your-fcm-server-key
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apns-team-id